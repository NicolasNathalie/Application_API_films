<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Movies app</title>

</head>
<body class="body">
    <header>
        <h1>Search Result > <%=search%></h1>             
    </header>
    <% result.forEach(element => {  
        if(element.name!=="ejs"){%>
    <div class="card mb-3" style="max-width: 60%;">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="https://image.tmdb.org/t/p/w600_and_h900_bestv2/<%=element.poster_path%>" class="img-fluid rounded-start" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h3 class="card-title"><%=element.original_title%></h3>
              <p class="card-text"><%=element.overview%></p>
              <p class="card-text"><strong>Date Published: </strong><%=element.release_date%></p>
              <p class="card-text"><strong>Total Votes: </strong><%=element.vote_average%></p>
              <p class="card-text"><strong>Average Rating: </strong><%=element.vote_count%></p>
            </div>
          </div>
        </div>
      </div>
      <%=element.name%>
      <%}});%>       
    <script type="module" src="main.js" defer></script>
</body>
</html>